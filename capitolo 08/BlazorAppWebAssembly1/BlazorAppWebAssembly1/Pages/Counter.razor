@page "/counter/"
@page "/counter/{step:int?}"

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me (@Step)</button>

@code {
    private int _step=1;
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount += _step;
    }

    [Parameter]
    public int Step{ 
        get
        {
            return _step;
        }
        set
        {
            if(value>0)
                _step=value;
            else _step=1;
        }
    }

}
