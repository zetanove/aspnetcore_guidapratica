@model TodoWebApp.Models.Categoria

@{
    ViewData["Title"] = "CreateCategoria";
}

<h1>Modifica Categoria</h1>
<h4>@Model.NomeCategoria</h4>
<div>
    <a asp-action="Categorie">Torna all'elenco</a>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditCategoria">
            <input type="hidden" asp-for="IDCategoria"/>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NomeCategoria" class="control-label"></label>
                <input asp-for="NomeCategoria" class="form-control"/>
                <span asp-validation-for="NomeCategoria" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Colore" class="control-label"></label>
                <input asp-for="Colore" class="form-control"/>
                <span asp-validation-for="Colore" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" value="Salva" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}